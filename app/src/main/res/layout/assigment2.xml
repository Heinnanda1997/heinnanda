<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:padding="20dp">

    <ImageView
        android:id="@+id/bk1"
        android:layout_width="208dp"
        android:layout_height="186dp"
        android:src="@drawable/bk55"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="149dp"
        android:layout_height="51dp"
        android:text="David Beckham"
        android:textColor="#C62828"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football player,UK"
        android:textColor="#C62828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <Button
        android:id="@+id/button"
        android:layout_width="75dp"
        android:layout_height="24dp"
        android:background="#00838F"
        android:text="Follow"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       34                100000000\n
     Posts            Followers"
        android:textColor="#C62828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="David Robert Beckham OBE is an English former professional footballer, the curent
 president of inter Miami CF and co owner of Salford City"
        android:textSize="20dp"
        android:textColor="#C62828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:text="About"
        android:textSize="25dp"
        android:textColor="#C62828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.841" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginEnd="264dp"
        android:layout_marginRight="264dp"
        android:src="@drawable/bk3"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="310dp" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:src="@drawable/bk22"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="312dp" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/bk44"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="313dp" />

    <ImageView
        android:layout_width="256dp"
        android:layout_height="49dp"
        android:src="@drawable/logo2"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="465dp" />
